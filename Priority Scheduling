#include <stdio.h>

struct Process{
    int id,at,bt,pr,ct,tat,wt,done;
};

int main(){
    int i,n,time=0,done=0;
    printf("enter no of processes: ");
    scanf("%d",&n);
    
    struct Process p[n];
    
    for(i=0;i<n;i++){
        p[i].id=i+1;
        printf("enter AT, BT & priority: ");
        scanf("%d%d%d",&p[i].at,&p[i].bt,&p[i].pr);
        p[i].done=0;
    }
    int seq[1000],start[1000],end[1000],k=0;
    while(done<n){
        int minPr=9999,idx=-1;
        for(i=0;i<n;i++){
            if(!p[i].done && p[i].at<=time && p[i].pr<minPr){
                minPr=p[i].pr;
                idx=i;
            }}
            if(idx==-1){
                time++;
            }
            else{
                start[k]=time;
                time+=p[idx].bt;
                seq[k]=p[idx].id;
                p[idx].ct=time;
                end[k]=time;
                p[idx].tat=time-p[idx].at;
                p[idx].wt=p[idx].tat-p[idx].bt;
                p[idx].done=1;
                k++;
                done++;
            }
        }
    
    printf("\nGantt Chart\n");
    printf("|");
    for(i=0;i<k;i++){
        printf(" P%d |",seq[i]);
    }printf("\n");
    for(i=0;i<k;i++){
        printf(" %d ",start[i]);
    }printf(" %d",end[k-1]);
    
    float avgTAT=0,avgWT=0;
    printf("\nProcess\tAT\tBT\tPriority\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++){
        printf("%d\t%d\t%d\t%d\t%d\t%d\t%d\n",p[i].id,p[i].at,p[i].bt,p[i].pr,p[i].ct,p[i].tat,p[i].wt);
        avgTAT+=p[i].tat;
        avgWT+=p[i].wt;
    }
    printf("\nAverage TAT = %.2f Average WT = %.2f",avgTAT/n,avgWT/n);
    return 0;
}
