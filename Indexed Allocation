#include <stdio.h>
#define MAX 100

struct Index{
    int data[MAX];
};

int main(){
    struct Index idx;
    int i,b,n;
    
    for(i=0;i<MAX;i++){
        idx.data[i]=-1;
    }
    
    printf("enter no of blocks to be allocated: ");
    scanf("%d",&n);
    
    for(i=0;i<n;i++){
        printf("Block # : ");
        scanf("%d",&b);
        idx.data[i]=b;
    }
    printf("\nAllocated: ");
    
    for(i=0;i<n;i++){
        printf("%d\t",idx.data[i]);
    }
    
    while(1){
        printf("\nRead Block (-1:exit):");
        scanf("%d",&b);
        if(b==-1){
            break;
        }
        int found=0;
        for(i=0;i<n;i++){
                if(idx.data[i]==b){
                    printf("\nContent of %d read\n",b);
                    found=1;
                }
            }
            if(found==0){
                printf("\nNo such block");
            }
        }
    }
