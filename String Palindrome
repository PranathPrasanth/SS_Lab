DATA SEGMENT
 MSG1 DB 10,13,'ENTER STRING: $'
 MSG2 DB 10,13,'PALINDROME$'
 MSG3 DB 10,13,'NOT PALINDROME$'
 STR1 DB 50 DUP(0)
DATA ENDS

CODE SEGMENT
ASSUME CS:CODE, DS:DATA
START:
 MOV AX,DATA
 MOV DS,AX

 LEA DX,MSG1
 MOV AH,09H
 INT 21H

 LEA SI,STR1
 LEA DI,STR1
 MOV AH,01H

READ: INT 21H
 CMP AL,0DH
 JE ENDIN
 MOV [DI],AL
 INC DI
 JMP READ

ENDIN: MOV AL,'$'
 MOV [DI],AL

 LEA SI,STR1
 LEA DI,STR1
FIND: CMP BYTE PTR [DI],'$'
 JE CHECK
 INC DI
 JMP FIND

CHECK: DEC DI
AGAIN: MOV AL,[SI]
 CMP [DI],AL
 JNE NP
 INC SI
 DEC DI
 CMP SI,DI
 JL AGAIN

P: MOV AH,09H
 LEA DX,MSG2
 INT 21H
 JMP EXIT

NP: MOV AH,09H
 LEA DX,MSG3
 INT 21H

EXIT: MOV AH,4CH
 INT 21H
CODE ENDS
END START
